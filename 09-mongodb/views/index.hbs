<h1>MONGODB - EXERCISE</h1>
<section class="insert">
    <h3>Insert Data</h3>
    <form action="/insert" method="post">
        <div class="form-group input">
            <label for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title">
        </div>
        <div class="form-group input">
            <label for="content">Content</label>
            <input class="form-control" type="text" id="content" name="content">
        </div>
        <div class="form-group input">
            <label for="author">Author</label>
            <input class="form-control" type="text" id="author" name="author">
        </div>
        <button class="btn btn-primary" type="submit">INSERT</button>
    </form>
</section>
<section class="get">
    <h3>Get Data</h3>
    <a class="btn btn-primary" href="/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
            <article class="item">
                <div class="form-control">Title: {{ this.title }}</div>
                <div class="form-control">Content: {{ this.content }}</div>
                <div class="form-control">Author: {{ this.author }}</div>
                <div class="form-control">ID: {{ this._id }}</div>
            </article>
        {{/each}}
    </div>
</section>
<section class="update">
    <h3>Update Data</h3>
    <div class="form-group">
        <form action="/update" method="post">
            <div class="form-group input">
                <label for="id">ID</label>
                <input class="form-control" type="text" id="id" name="id">
            </div>
            <div class="form-group input">
                <label for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title">
            </div>
            <div class="form-group input">
                <label for="content">Content</label>
                <input class="form-control" type="text" id="content" name="content">
            </div>
            <div class="form-group input">
                <label for="author">Author</label>
                <input class="form-control" type="text" id="author" name="author">
            </div>
            <button class="btn btn-primary" type="submit">UPDATE</button>
        </form>
    </div>
</section>
</section>
<section class="delete">
    <h3>Delete Data</h3>
    <form action="/delete" method="post">
        <div class="form-group input">
            <label for="id">ID</label>
            <input class="form-control" type="text" id="id" name="id">
        </div>
        <button class="btn btn-warning" type="submit">DELETE</button>
    </form>
</section>